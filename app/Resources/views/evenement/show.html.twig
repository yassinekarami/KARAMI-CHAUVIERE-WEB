{% extends 'base.html.twig' %}

{% block traduction %}
    {% if app.request.locale == "en" %}
        <li><a href="{{ path('evenement_show' , {'_locale' : 'fr' , 'id': evenement.id }) }}">FR</a></li>
    {% else %}
        <li><a href="{{ path('evenement_show' , {'_locale' : 'en' , 'id': evenement.id }) }}">EN</a></li>
    {% endif %}
{% endblock %}

{% block title %}<h2>{{ 'index.event' | trans }}</h2>{% endblock title %}

{% block body %}
    <table>
        <tbody>
            <tr>
                <th>Id evenement</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom evenement</th>
                <td>{{ evenement.nomEvenement }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if evenement.dateDebut %}{{ evenement.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ evenement.lieu }}</td>
            </tr>
            <tr>
                <th>Nombremax</th>
                <td>{{ evenement.nombreMax }}</td>
            </tr>
        </tbody>
    </table>


    <ul>
        <li>
            <a class="btn" href="{{ path('evenement_homepage') }}">Back to the list</a>
            <a class="btn" href="{{ path('evenement_delete', { 'id': evenement.id }) }}">{{ 'index.delete' | trans}}</a>
            <a class="btn" href="{{ path('evenement_edit', {'_locale' : 'fr', 'id': evenement.id }) }}">{{ 'index.edit' | trans }}</a>
        </li>
